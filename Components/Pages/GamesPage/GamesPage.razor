@page "/games"
@rendermode InteractiveServer
@attribute [StreamRendering]

<h3>GamesPage</h3>

<div class="d-flex flex-row justify-content-center gap-3">
	<Button Color="ButtonColor.Primary" @onclick="@(()=>currentGame = "2048")">Game 2048</Button>
	<Button Color="ButtonColor.Primary" @onclick="@(()=>currentGame = "ConnectFour")"> Game Connect Four</Button>
</div>

<div class="d-flex flex-row justify-content-center p-4">
	@if (currentGame == "2048")
	{
		<div>		
			<Game2048/>
		</div>

	}
	else
	{
		<div>	
			<ConnectFour/>
		</div>

	}
</div>



@code {
	private string currentGame = "2048";
}
